<h2 class="text-center">Log in</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="grid-x grid-padding-x">
    <div class="small-3 cell">
      <%= f.label :email, class: "text-right middle" %><br />
    </div>
    <div class="small-6 cell">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="grid-x grid-padding-x">
    <div class="small-3 cell">
      <%= f.label :password, class: "text-right middle" %><br />
    </div>
    <div class="small-6 cell">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="grid-x grid-padding-x">
      <div class="small-6 cell"></div>
      <div class="small-3 cell float-right text-right">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <br>
  <div class="actions grid-x grid-padding-x">
    <div class="small-6 cell"></div>
    <div class="small-3 cell float-right text-right">
      <button type="submit" class="button radius bordered shadow primary float-right">Log In</button>
    </div>
  </div>
<% end %>
<br>
<div class="actions grid-x grid-padding-x">
  <div class="small-6 cell"></div>
  <div class="small-3 cell float-right text-right">
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
</div>
